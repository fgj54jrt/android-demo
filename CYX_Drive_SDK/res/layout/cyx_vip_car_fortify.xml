<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     android:background="@color/regist_bg_color">
     <include layout="@layout/cyx_title" android:id="@+id/title"/>
  <ScrollView 
      android:layout_width="fill_parent"
      android:layout_height="fill_parent"
      android:scrollbars="vertical"
       android:layout_below="@+id/title"
       android:layout_marginBottom="10dp">
      <RelativeLayout
         android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="10dp">
     <FrameLayout android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:id="@+id/layout_top"
         >
         <LinearLayout 
             android:layout_width="fill_parent"
             android:layout_height="fill_parent"
             android:orientation="vertical"
             android:layout_gravity="center_horizontal"
             >
	     <TextView 
	         android:id="@+id/car_fortify_notice"
	         android:textSize="15sp"
	         android:layout_gravity="center_horizontal"
	         android:layout_marginTop="20dp"
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:textColor="@color/deep_gray"
	         android:text="@string/car_fortify_notice"
	         android:layout_marginRight="10dp"
	         android:layout_marginLeft="10dp"
	         android:visibility="gone"/>
	     <include 
	         layout="@layout/cyx_carfortify"
	         android:layout_width="fill_parent"
	         android:layout_height="wrap_content"
	         android:id="@+id/layout_middle"
	         />
    	 </LinearLayout>
    	 <TextView
    	     android:layout_width="fill_parent"
    	     android:layout_height="fill_parent"
    	     android:layout_marginLeft="10dp"
    	     android:layout_marginRight="10dp"
    	     android:layout_marginTop="40dp"
    	     android:background="@color/deep_gray"
    	     android:id="@+id/colse_fortify_tv"
			 android:textColor="@color/white"
			 android:textSize="16sp"
			 android:text="@string/already_close_fortify"
			 android:gravity="center"
			 android:visibility="gone"/>    	
     </FrameLayout>
     <Button android:layout_below="@+id/layout_top"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="@drawable/register_btn_bg"
        android:textColor="@color/white"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:paddingBottom="10dp"
        android:text="@string/open_fortify"
        android:id="@+id/btn_fortify"
        android:gravity="center"
        android:layout_centerHorizontal="true"/>
     </RelativeLayout>
    </ScrollView>
</RelativeLayout>
