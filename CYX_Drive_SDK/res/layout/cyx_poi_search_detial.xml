<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/poi_check_bg" >
    <ImageView 
                       android:layout_width="30dp"
                       android:layout_height="wrap_content"
                       android:contentDescription="@string/img"
                       android:src="@drawable/ic_jiantou_left"
                        android:layout_alignParentLeft="true"
                       android:id="@+id/img_poi_lastDetial"
                       android:layout_marginLeft="5dp"
                       />
    
   <Gallery 
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:id="@+id/my_grally"
       android:paddingRight="5dp"
       android:paddingLeft="5dp"
       android:drawSelectorOnTop="false"
       android:spacing="10dp"
       android:layout_centerInParent="true"
       android:focusable="false"
       android:layout_toRightOf="@+id/img_poi_lastDetial"
       android:layout_toLeftOf="@+id/img_poi_nextDetial"/>
   
        <ImageView
                         android:id="@+id/img_poi_nextDetial"
                         android:layout_width="30dp"
                         android:layout_height="wrap_content"
                         android:contentDescription="@string/img"
                         android:src="@drawable/ic_jiantou_right"
                         android:layout_alignParentRight="true"
                         android:layout_marginRight="5dp" />
</RelativeLayout>

