                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp" >

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="45dp"
                        android:layout_gravity="center_vertical"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/bizNameTv"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_marginRight="40dp"
                            android:gravity="center_vertical"
                            android:minHeight="30dp"
                            android:textColor="@color/whb_black_11"
                            android:textSize="18sp" />

                        <ImageView
                            android:id="@+id/bookNumIV"
                            android:layout_width="45dp"
                            android:layout_height="fill_parent"
                            android:layout_alignParentRight="true"
                            android:onClick="makePhone"
                            android:padding="10dp"
                            android:scaleType="centerInside"
                            android:src="@drawable/whb_coupon_info_book"
                            android:visibility="visible" />
                    </RelativeLayout>

                    <View
                        android:id="@+id/line"
                        android:layout_width="fill_parent"
                        android:layout_height="0.5dip"
                        android:background="@color/whb_grey_dd"
                        android:visibility="visible" >
                    </View>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@null"
                        android:orientation="horizontal" >

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="30dp"
                            android:src="@drawable/whb_biz_info_loc" />

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:background="@null"
                            android:orientation="vertical" >

                            <TextView
                                android:id="@+id/bizdiscount"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:minHeight="10dp"
                                android:text="@string/whb_biz_coupon_tip1"
                                android:textColor="@color/whb_black"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/bizCouponsTv"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:minHeight="10dp"
                                android:textColor="@color/whb_black"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/effectTime"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:minHeight="10dp"
                                android:text="2014年11月03日前有效"
                                android:textColor="@color/whb_black"
                                android:textSize="15sp"
