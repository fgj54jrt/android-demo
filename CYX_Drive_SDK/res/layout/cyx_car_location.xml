<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_main"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
    <include layout="@layout/cyx_title" />
   <RelativeLayout 
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:background="@color/white">
       <TextView 
           android:id="@+id/tv1"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="@string/latest_location"
           android:layout_marginLeft="5dp"
           android:layout_marginTop="5dp"/>
       <TextView 
           android:id="@+id/latest_location"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_toRightOf="@id/tv1"
           android:layout_marginTop="5dp"
           android:ellipsize="end"/>
       
       <TextView 
           android:id="@+id/tv2"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_below="@id/tv1"
           android:text="@string/time"
           android:layout_marginLeft="5dp"
           android:layout_marginTop="5dp"
           android:layout_marginBottom="5dp"/>
       <TextView 
           android:id="@+id/latest_time"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_toRightOf="@id/tv2"
           android:layout_below="@id/latest_location"
           android:layout_marginTop="5dp"
           android:layout_marginBottom="5dp"
           android:ellipsize="end"/>
   </RelativeLayout>
   <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:id="@+id/layout_map">
        <com.baidu.mapapi.map.MapView
        android:id="@+id/mMapView"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent" 
	    android:clickable="true" 
	    />
        
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            >
            <Button
                android:id="@+id/btn_satellite"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/turn_gps" />
             <Button
                 android:id="@+id/btn_zoomin"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_above="@+id/btn_zoomout"
                 android:layout_alignParentRight="true"
                 android:background="@drawable/btn_zoom_in"
                  android:layout_marginRight="5dp"/>
			<Button
                 android:id="@+id/btn_zoomout"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_alignParentRight="true"
                 android:layout_marginBottom="15dp"
                 android:layout_marginRight="5dp"
                 android:layout_alignParentBottom="true"
                 android:background="@drawable/btn_zoom_out" />
			
			<Button
                 android:id="@+id/btn_getLocation"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginBottom="15dp"
                 android:layout_marginLeft="5dp"
                 android:layout_alignParentBottom="true"
                 android:background="@drawable/btn_getlocation_bg" />
        </RelativeLayout>
        
          
    </FrameLayout>

     
</LinearLayout>
