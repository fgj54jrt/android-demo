<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="#f0f0f0"  >
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/poi_check_bg">
        <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">
        <TextView 
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="世界之窗"
            android:textColor="@color/deep_gray"
            android:textSize="20sp"
            android:layout_weight="0.7"
            android:id="@+id/poi_list_PoiName"
            android:layout_marginLeft="10dp"/>
         	<ImageView
			          android:layout_width="0dip"
			          android:layout_height="wrap_content"
			          android:contentDescription="@string/img"
			          android:src="@drawable/ic_place_icon"
			          android:layout_marginLeft="8dp"
			          android:layout_gravity="center_vertical"
			          android:layout_weight="0.1"/>
                         <TextView
                         android:layout_width="0dip"
                         android:layout_height="wrap_content"
                         android:text="1km"
                         android:layout_weight="0.2"
                         android:layout_gravity="center_vertical"
                         android:id="@+id/poi_place_Distance"
                         android:textColor="@color/light_gray"
                         android:textSize="13sp" />
        </LinearLayout>
           <TextView 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="世界之窗"
            android:textColor="@color/light_gray2"
            android:textSize="16sp"
             android:id="@+id/poi_list_PoiAddress"
            android:layout_marginLeft="10dp"/>
            <LinearLayout
             android:layout_height="50dp"
             android:layout_width="wrap_content"
             android:background="@drawable/btn_main_bottom_bg" 
             android:id="@+id/poiList_btn_navi"
             android:orientation="horizontal"
             android:gravity="center"
             android:layout_marginRight="5dp"
             android:layout_gravity="right"
             android:layout_marginBottom="5dp">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/img"
                        android:src="@drawable/ic_fold_line" />
                        <TextView 
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/deep_gray"
                            android:text="@string/navi"
                            android:gravity="center"
                            android:layout_marginLeft="5dp"/>
             </LinearLayout> 
    </LinearLayout>

</LinearLayout>
