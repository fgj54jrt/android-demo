<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_main"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
    <include layout="@layout/cyx_title" />   
   <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:id="@+id/layout_map">
        <com.baidu.mapapi.map.MapView
        android:id="@+id/mMapView"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent" 
	    android:clickable="true" 
	    />
        
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            >
            <Button
                android:id="@+id/btn_satellite"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/turn_gps" />
             <Button
                 android:id="@+id/btn_zoomin"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_above="@+id/btn_zoomout"
                 android:layout_alignParentRight="true"
                 android:background="@drawable/btn_zoom_in"
                  android:layout_marginRight="5dp"/>
			<Button
                 android:id="@+id/btn_zoomout"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_alignParentRight="true"
                 android:layout_marginBottom="15dp"
                 android:layout_marginRight="5dp"
                 android:layout_alignParentBottom="true"
                 android:background="@drawable/btn_zoom_out" />
			
			<Button
                 android:id="@+id/btn_getLocation"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginBottom="15dp"
                 android:layout_marginLeft="5dp"
                 android:layout_alignParentBottom="true"
                 android:background="@drawable/btn_getlocation_bg" />
        </RelativeLayout>
        
          
    </FrameLayout>

     
</LinearLayout>
