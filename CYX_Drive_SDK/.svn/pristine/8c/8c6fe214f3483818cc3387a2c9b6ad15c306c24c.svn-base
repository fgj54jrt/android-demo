<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include android:id="@+id/title" layout="@layout/cyx_title" />
    
    <TextView android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:textSize="20sp"
         android:text="@string/NULL_DATA"
         android:id="@+id/null_data"
         android:layout_centerInParent="true"
         android:visibility="gone"/>
    
    <RelativeLayout 
        android:id="@+id/tip_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_gravity="center_horizontal"
        android:visibility="gone">
        <LinearLayout 
            android:id="@+id/layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerInParent="true">
	        <ImageView 
	            android:id="@+id/iv"
	            android:layout_width="20dp"
	            android:layout_height="20dp"
	            android:layout_margin="2dp"
	            android:background="@drawable/warning"
	            android:contentDescription="@string/img"/>
		    <TextView 
		        android:id="@+id/network_tip"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="10dp"
		        android:text="@string/network_too_bad"
		        android:layout_gravity="center_vertical"
		        android:textColor="@color/gray"/>
	    </LinearLayout>
	     <View 
	        android:layout_height="2dp"
            android:layout_width="wrap_content"
            android:layout_below="@id/layout"
            android:background="@drawable/cyx_fengexian"/>
    </RelativeLayout>
    
    <com.cwits.cyx_drive_sdk.widget.xlistview.XListView
    	android:id="@+id/listView"
    	android:layout_width="fill_parent"
    	android:layout_height="fill_parent"
    	android:layout_below="@id/tip_layout"
    	android:background="#f5f5f5"
    	android:cacheColorHint="#0000"
    	android:visibility="gone"/>
    
