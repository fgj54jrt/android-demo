<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/report"
    android:layout_width="fill_parent"
    android:layout_height="245dp"
    android:background="@drawable/cyx_report_bg"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="24dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:text="@string/invite_friends"
            android:textColor="#4a4b4a"
            android:textSize="21sp" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"           
            android:orientation="vertical" >
           
			<ImageView
                android:id="@+id/wechat_btn"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:contentDescription="@string/img"
                android:background="@drawable/cyx_wechat"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:text="@string/friends_wechar"
                android:textSize="12sp"
                android:textColor="#404040" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/msg_btn"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/cyx_msg"              
                android:contentDescription="@string/img"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:text="@string/friends_short_message_invite"
                android:textSize="12sp"
                android:textColor="#404040" />
        </LinearLayout>


        <LinearLayout
    		android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right" 
            android:orientation="vertical" >
    		

		    <ImageView
		        android:id="@+id/sina_btn"
		        android:layout_width="60dp"
		        android:layout_height="60dp"
		        android:contentDescription="@string/img"
		        android:background="@drawable/cyx_sina" />
		
		    <TextView
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_gravity="center"
		        android:text="@string/friends_sina_microblog"
		        android:textSize="12sp"
		        android:textColor="#404040" />

</LinearLayout>
    </FrameLayout>


<Button
    android:id="@+id/cancle_btn"
    android:layout_width="248dp"
    android:layout_height="39dp"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/report_btn_bg"
    android:layout_marginTop="20dp"
    android:text="@string/cancel"
    android:textColor="#FFFAFA" />
<!-- <Button
    android:id="@+id/query_btn"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal|bottom"
    android:text="查询上报历史"
    android:visibility="gone" /> -->

</LinearLayout>