<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
      <include layout="@layout/cyx_title" android:id="@+id/title"/>
    <include 
        android:id="@+id/hint" 
        android:layout_width="match_parent" 
        android:layout_height="wrap_content" 
        android:layout_below="@id/title" 
        layout="@layout/cyx_vip_hint"
        android:layout_marginTop="15dp"/>
    
	<Button 
	    android:layout_alignParentBottom="true"
	    android:id="@+id/btn_vip"
	    android:layout_width="fill_parent"
	    android:layout_height="45dp"
	    android:text="@string/to_be_vip"
	    android:textColor="@color/white"
	    android:textSize="18sp"
	    android:layout_centerHorizontal="true"
	    android:layout_marginLeft="30dp"
	    android:layout_marginRight="30dp"
	    android:layout_marginBottom="50dp"
	    android:layout_marginTop="30dp"
	    android:background="@drawable/register_btn_bg"/>
	
	<ImageView 
        android:id="@+id/mid_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/locate_map"
        android:layout_below="@id/hint"
       	android:layout_above="@id/btn_vip"
        android:scaleType="centerInside"/>
</RelativeLayout>
