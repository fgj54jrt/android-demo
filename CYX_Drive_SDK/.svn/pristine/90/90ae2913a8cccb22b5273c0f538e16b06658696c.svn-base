<resources>

   <style name="AppBaseTheme" parent="android:Theme.Light">
    </style>
    <style name="AppTheme" parent="AppBaseTheme">
    </style>
    <style name="myTheme">
        <item name="android:windowNoTitle">true</item> <!-- 去掉标题 -->
        <item name="android:windowFullscreen">?android:windowNoTitle</item> <!-- 全屏显示 -->
    </style>
    
    <style name="SettingsTextStyle_big">      
        <item name="android:textSize">22.0dip</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#2E2E2E</item>     
        <item name="android:background">@null</item>
        
    </style>
     <style name="SettingsTextStyle_middle">      
        <item name="android:textSize">20.0dip</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#2E2E2E</item>     
        <item name="android:background">@color/settings_gray</item>
    </style>
    <style name="SettingsTextStyle_small">      
        <item name="android:textSize">18.0dip</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#2E2E2E</item>     
        <item name="android:background">@null</item>
    </style>
    
    <style name="Theme.ReportDialog" parent="android:style/Theme.Dialog">  
        <item name="android:windowBackground">@color/transparent</item>  
        <item name="android:windowNoTitle">true</item>  
    </style> 
    
    <style name="half_transparent" parent="android:style/Theme.Dialog">
        　　   <item name="android:windowBackground">@color/transparent</item>  
        <item name="android:windowNoTitle">true</item>  
    </style>
</resources>
